{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",

  "required": ["mensagem", "codigo", "dados", "qde_registros", "pagina", "qde_por_pagina"],

  "properties": {

    "mensagem": {
      "type": "string",
      "minLength": 0,
      "description": "Mensagem informativa — pode ser vazia."
    },

    "codigo": {
      "type": "integer",
      "minimum": 0,
      "description": "Código numérico retornado pelo serviço."
    },

    "dados": {
      "type": "array",
      "description": "Lista de registros contendo data e plays registrados",
      "minItems": 0,

      "items": {
        "type": "object",
        "required": ["qdePlays", "data"],
        "additionalProperties": false,

        "properties": {
          "qdePlays": {
            "type": "integer",
            "minimum": 0,
            "description": "Quantidade de plays na data correspondente."
          },
          "data": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
            "description": "Formato obrigatório: yyyy-MM-dd"
          }
        }
      }
    },

    "qde_registros": {
      "type": "integer",
      "minimum": 0
    },

    "pagina": {
      "type": "integer",
      "minimum": 0
    },

    "qde_por_pagina": {
      "type": "integer",
      "minimum": 0
    }
  },

  "additionalProperties": false
}
