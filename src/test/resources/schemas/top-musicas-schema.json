{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Top Plays por Faixas",
  "type": "object",

  "required": ["mensagem", "codigo", "dados","total", "qde_registros", "pagina", "qde_por_pagina"],
  "additionalProperties": false,

  "properties": {

    "mensagem": {
      "type": "string",
      "minLength": 0,
      "description": "Mensagem da API — aceita vazia"
    },

    "codigo": {
      "type": "integer",
      "minimum": 0,
      "maximum": 1,
      "description": "Código de resposta da API — geralmente 0 = OK"
    },

    "dados": {
      "type": "array",
      "minItems": 1,
      "description": "Lista com informações das faixas e plays",
      "items": {
        "type": "object",
        "required": [
          "id",
          "qdePlaysAtual",
          "titulo",
          "artistas",
          "dataLancamento",
          "capa",
          "qdePlaysAnterior",
          "plataforma"
        ],
        "additionalProperties": false,

        "properties": {

          "id": {
            "type": "integer",
            "minimum": 1,
            "description": "Identificador único do registro"
          },

          "qdePlaysAtual": {
            "type": "integer",
            "minimum": 0,
            "description": "Quantidade atual de plays da obra"
          },

          "titulo": {
            "type": "string",
            "minLength": 1,
            "maxLength": 120,
            "description": "Título da faixa"
          },

          "artistas": {
            "type": "string",
            "minLength": 1,
            "description": "Lista de artistas da música em string única"
          },

          "dataLancamento": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}$",
            "description": "Data no formato YYYY-MM-DD HH:MM:SS"
          },

          "capa": {
            "type": "string",
            "minLength": 20,
            "pattern": "^distributions\\/[A-Za-z0-9\\-\\/\\._]+\\.(png|jpg|jpeg|JPG|JPEG|PNG)$",
            "description": "Caminho da imagem final da capa"
          },

          "qdePlaysAnterior": {
            "type": "integer",
            "minimum": 0,
            "description": "Quantidade de plays anteriores registrados"
          },

          "plataforma": {
            "type": "string",
            "minLength": 1,
            "maxLength": 40,
            "description": "Plataforma onde o play ocorreu (TikTok, YouTube, etc.)",
            "examples": ["Tiktok", "You Tube", "Spotify", "Deezer", "Amazon"]
          }
        }
      }
    },

    "total": {
      "type": "integer",
      "minimum": 0,
      "description": "Total"
    },

    "qde_registros": {
      "type": "integer",
      "minimum": 0,
      "description": "Total de registros disponíveis antes de paginação"
    },

    "pagina": {
      "type": "integer",
      "minimum": 0,
      "description": "Página atual retornada"
    },

    "qde_por_pagina": {
      "type": "integer",
      "minimum": 1,
      "maximum": 200,
      "description": "Quantidade de itens retornados por página"
    }
  }
}
