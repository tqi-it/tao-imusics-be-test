{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "mensagem",
    "codigo",
    "dados",
    "total",
    "qde_registros",
    "pagina",
    "qde_por_pagina"
  ],
  "properties": {
    "mensagem": { "type": "string" },
    "codigo": { "type": "number" },

    "dados": {
      "type": "object",
      "required": [
        "id",
        "qdePlaysAtual",
        "titulo",
        "artistas",
        "dataLancamento",
        "capa",
        "qdePlaysAnterior",
        "plataforma"
      ],
      "properties": {
        "id": { "type": ["integer", "null"] },
        "qdePlaysAtual": { "type": "number" },
        "titulo": { "type": "string" },
        "artistas": { "type": "string" },
        "dataLancamento": { "type": ["string", "null"], "format": "date-time" },
        "capa": { "type": "string" },
        "qdePlaysAnterior": { "type": "number" },
        "plataforma": { "type": "string" }
      },
      "additionalProperties": false
    },


    "total": {
      "type": "integer",
      "minimum": 1
    },

    "qde_registros": {
      "type": "integer",
      "minimum": 1
    },

    "pagina": {
      "type": "integer",
      "minimum": 0
    },

    "qde_por_pagina": {
      "type": "integer",
      "const": 20
    }
  },
  "additionalProperties": false
}
