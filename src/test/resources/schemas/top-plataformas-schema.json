{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Distribuicao Top Plataformas",
  "description": "Schema compatível com o contrato de distribuição por plataformas",

  "type": "object",
  "required": [
    "mensagem",
    "codigo",
    "dados",
    "qde_registros",
    "pagina",
    "qde_por_pagina",
    "somaTotalRegistros"
  ],

  "properties": {

    "mensagem": {
      "type": "string",
      "minLength": 0,
      "description": "Mensagem retornada pela API"
    },

    "codigo": {
      "type": "integer",
      "minimum": 0,
      "description": "Código do retorno"
    },

    "dados": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["plataforma", "porcentagem", "qdePlays", "logoLoja"],

        "properties": {
          "plataforma": {
            "type": "string",
            "minLength": 1
          },

          "porcentagem": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Percentual total da plataforma"
          },

          "qdePlays": {
            "type": "integer",
            "minimum": 0
          },

          "logoLoja": {
            "type": "string",
            "minLength": 5,
            "pattern": "^lojas\\/.+\\.(png|jpg|jpeg)$"
          }
        },

        "additionalProperties": false
      }
    },

    "qde_registros": { "type": "integer", "minimum": 0 },
    "pagina": { "type": "integer", "minimum": 0 },
    "qde_por_pagina": { "type": "integer", "minimum": 1 },
    "somaTotalRegistros": { "type": "integer", "minimum": 0 }
  },

  "additionalProperties": false
}
